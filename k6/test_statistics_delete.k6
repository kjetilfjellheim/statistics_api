import { Trend } from 'k6/metrics';
import http from 'k6/http';
import { check, sleep } from 'k6';
import { uuidv4 } from 'https://jslib.k6.io/k6-utils/1.4.0/index.js';

let myTrend = new Trend('my_trend');

export let options = {
    stages: [
        { duration: '30s', target: 200 },
        { duration: '4m', target: 200 },
        { duration: '30s', target: 1 },
    ],
    thresholds: {
        'http_req_duration': ['p(95)<100'], 
        'my_trend': ['avg<50'],
    },
};

let authHeaders = {
    headers: {
        'x-fd-userid':'123456789',
        'x-request-id':'vhvjhvv565656',
        'Signature-Input':'sig=(\"x-fd-userid\" \"x-request-id\" \"@method\");alg=\"rsa-pss-sha512\";keyid=\"key1\";created=1756655408;expires=1956655708',
        'Signature':'sig=::'
    },
};

export default function () {
    let res = http.del('http://localhost:8080/api/services/v1_0/statistics/0', null, authHeaders);
    check(res, {
        'status is 404': (r) => r.status === 404,
    });
    myTrend.add(res.timings.duration);
    sleep(1);
}
